<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="80dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/tou_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/me_head_bg"
                android:layout_marginRight="5dp"/>

            <com.example.stone.test.image.CircularImage
                android:id="@+id/iv_picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/iv_bg" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_picture"
                android:text="hack"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@id/tv_nickname"
                android:text="04/08 2016"
                android:textSize="10dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_picture"
            android:layout_marginTop="13dp"
            android:text="就是我我给我哈哈公安和购物给我改好后购物和购物和欧冠我还"
            android:textColor="#000000"
            android:textSize="14dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>

